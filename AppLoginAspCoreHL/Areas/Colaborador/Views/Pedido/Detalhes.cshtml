@model IEnumerable<AppLoginAspCoreHL.Models.ItensPedido>

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do Pedido</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Capa do Livro
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_pedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo_liv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtItens)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    <figure class="media">
                        <div class="img-wrap">
                            <img alt="Thumbnail [300x300]" style="width: 70px; height: 70px;" src="@item.Imagem">
                        </div>
                    </figure>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_pedido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo_liv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QtItens)
                </td>
                <td>
                    @item.VlTotal.ToString("C")
                </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Index" class="btn btn-outline-primary btn-sm">Voltar</a>
