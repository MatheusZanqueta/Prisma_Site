                                                <img class="card-img-top" src="@item.Imagem" style="max-width:100%; max-height:100%" alt="Card image cap">
                                            </div>

                                            <div class="card-body">
                                                <h5 class="card-title">@item.Titulo</h5>
                                                <p class="card-text">R$@item.Preco</p>
                                                <div class="btn btn-primary" style="width:100%">
                                                    <div>
                                                        @using (Html.BeginForm("AdicionarItem", "Home", FormMethod.Post))
                                                        {
                                                            <input type="hidden" name="id" value=@item.Id>
                                                            <input type="hidden" name="quantidade" value="1">
                                                            <button type="submit" class="btn btn-default btn-acao-primario">Adicionar</button>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
