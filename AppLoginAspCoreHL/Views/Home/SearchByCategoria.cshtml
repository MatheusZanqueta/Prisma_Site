@model List<PesquisaLivro>
@{
    ViewData["Title"] = "Pesquisa";
}
<head>
    <style type="text/css">
        button:hover {
            transform: scale(1.4);
        }
    </style>
</head>


<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var livro in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <a asp-controller="Home" asp-action="Detalhes" asp-route-id="@livro.Id_liv" style="color:black"> <img class="card-img-top" style="height: 20vw" src="@livro.Image_liv" /></a>
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    <a asp-controller="Home" asp-action="Detalhes" asp-route-id="@livro.Id_liv" style="color: black">@livro.Titulo_liv</a>
                                </h5>
                                <hr />
                                <!-- Product price-->
                                <div style="float: right">
                                    @livro.Preco_liv.ToString("C")
                                </div>
                            </div>
                        </div>
                        <hr />
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent d-flex justify-content-center">
                            @using (Html.BeginForm("AdicionarItem", "Home", FormMethod.Post))
                            {
                                <input type="hidden" name="id" value=@livro.Id_liv>
                                <input type="hidden" name="quantidade" value="1">
                                <button type="submit" class="btn btn-primary btn-acao-primario" style="background-color:#7D95FF; border-color:#7D95FF ; transition: transform 2s" ;>Adicionar</button>
                            }
                        </div>
                    </div>
                </div>
            }
            </<div>
                </<div>
</section>